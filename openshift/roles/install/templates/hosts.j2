# project for the template service broker
openshift_enable_service_catalog=true
template_service_broker_install=true
openshift_template_service_broker_namespaces=['openshift']

# etcd space for ansible broker
openshift_hosted_etcd_storage_kind=nfs
openshift_hosted_etcd_storage_nfs_options="*(rw,root_squash,sync,no_wdelay)"
openshift_hosted_etcd_storage_nfs_directory={{ hostvars[groups['masters'][0]]['volumes']['ansible-broker']['mountpoint'] }}
openshift_hosted_etcd_storage_volume_name=
openshift_hosted_etcd_storage_access_modes=["ReadWriteOnce"]
openshift_hosted_etcd_storage_volume_size={{ hostvars[groups['masters'][0]]['volumes']['ansible-broker']['size'] }}Gi
openshift_hosted_etcd_storage_labels={'storage': 'etcd'}

# host group for masters
[masters]
{% for master in groups['masters'] %}
{{ master }}.{{ domain }}
{% endfor %}

# host group for nodes, includes region info
[nodes]
{% for node in groups['all'] %}
{{ node }}.{{ domain }} openshift_node_labels="{'region': '{{ hostvars[node]['region'] }}', 'zone': '{{ hostvars[node]['zone'] }}'}"  
{% endfor %}

